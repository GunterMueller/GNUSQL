srcdir=@srcdir@
VPATH=@srcdir@
include ../Makefile_h
##======================================================================##
##          other setups                                                ##
##======================================================================##
H=$(INC)/global.h
TPH=$(INC)/type_lib.h
##########################################################################
#                make program                                            #
##########################################################################
all: $(LIBSER)
libgss_ser :  trl.o trl_dump.o tree_gen.o liter.o vcblib.o cycler.o
	echo $? >$@
tree_gen.o: tree_gen.c $(H)  $(INC)/tree_gen.h $(TPH)
trl.o     : trl.c trl.h $(H) trlinter.h $(INC)/vmemory.h $(TPH)
trl_dump.o: trl_dump.c $(H) trlinter.h $(TPH)
liter.o   : liter.c    $(H)  trlinter.h $(INC)/vmemory.h
vcblib.o  : vcblib.c   $(H)  trlinter.h $(INC)/cycler.h
cycler.o  : cycler.c $(INC)/cycler.h 
headers: trl.h
trl.h  : liter.h treecode.def treeflag.def $(INC)/vmemory.h \
         vcblib.h trl_macro.h tassert.h
	- touch $@

